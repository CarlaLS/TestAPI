<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Modificar Producto</h3>
        </div>
        <div class="card-body">
            <form action="/productos/edit/{{producto.id}}?_method=PUT" method="POST" >
            <input type="hidden" name="_method" value="PUT">
              <div class="form-group">
                 <input type="text" name="title" class="form-control" value="{{producto.title}}">
              </div>
              <div class="form-group">
                <textarea name="description" class="form-control" value="{{producto.description}}"></textarea>
              </div>
               <div class="form-group">
                 <input type="number" name="price" class="form-control" value="{{producto.price}}">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                  Guardar
                </button>
              </div>
            </form>
        </div>
    </div>
</div>