
<div class="row">
    {{#each productos}}
     
     <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center"> 
                    {{title}} <a href="/productos/edit/{{_id}}"><h6>Editar</h6></a>
                    </h4>
                <p> {{description}}</p>
                <h4> {{price}}</h4>
               <form action="/productos/delete/{{_id}}?_method=DELETE" method="POST">
               <input type="hidden" name="_method" value="DELETE" >
                  <button type="submit" class="btn btn-danger btn-sm btn-block">Eliminar</button>
               </form>
            </div>
        </div>
     </div>


    {{/each}}
</div>
